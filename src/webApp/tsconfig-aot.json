{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "core-js",
      "node"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "../../node_modules/*",
    "**/*-aot.ts"
  ],

  "files": [
    "app/app.module.ts",
    "main-jit.ts"
  ],
  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
 }
}
